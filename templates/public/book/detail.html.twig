{% extends 'base.html.twig' %}

{% block title %}
	Book Virtual
{% endblock %}

{% block body %}
	<!-- Section-->
	<section class="py-5">
		<div class="container px-4 px-lg-5 mt-5">
			<div class="p-5 mb-4 bg-light rounded-3">
				<div class="container-fluid py-5">
					<div class="row">
						<div class="col-9">
							<h1 class="display-5 fw-bold">{{  book.title }}</h1>
							<div class="mb-4">
								<span class="badge rounded-pill text-bg-primary">Primary</span>
								<span class="badge rounded-pill text-bg-secondary">Secondary</span>
								<span class="badge rounded-pill text-bg-success">Success</span>
								<span class="badge rounded-pill text-bg-warning">Warning</span>
								<span class="badge rounded-pill text-bg-info">Info</span>
								<span class="badge rounded-pill text-bg-light">Light</span>
							</div>
							<p class="col-md-8 fs-4">
								{{ book.description }}
								: Using a series of utilities, you can create this jumbotron, just like the one in previous versions of Bootstrap. Check out the examples below for how you can remix and restyle it to your liking.
							</p>

							<div class="mt-2">
								<button type="button" class="btn btn-primary btn-sm">Voir extrait</button>
								<button type="button" class="btn btn-outline-primary btn-sm">Telecharger</button>
							</div>

						</div>
						<div class="col-3">
							<figure class="figure">
								<img src="https://random.imagecdn.app/500/550" class="figure-img img-fluid rounded" alt="A generic square placeholder image with rounded corners in a figure.">
								<figcaption class="figure-caption text-right">A caption for the above image.</figcaption>
							</figure>
						</div>
					</div>
				</div>

				{% include 'public/book/_shard/_comment.html.twig' %}
			</div>
		</div>


		{% include 'public/book/_shard/_suggest.html.twig' %}


	</section>
{% endblock %}
